# ======================
# Database Configuration
# ======================
DB_HOST=example-db-host.com        # DB 서버 호스트 주소
DB_PORT=3306                       # DB 포트 (예: MySQL 3306)
DB_SCHEMA=example_schema           # 데이터베이스 스키마 이름
DB_USERNAME=example_user           # DB 접속 계정
DB_PASSWORD=example_password       # DB 접속 비밀번호

# ======================
# AWS Configuration
# ======================
AWS_ACCESS_KEY=your_aws_access_key         # AWS Access Key
AWS_SECRET_KEY=your_aws_secret_key         # AWS Secret Key
AWS_S3_BUCKET=example-bucket-name          # S3 버킷 이름
AWS_REGION=ap-northeast-2                  # AWS 리전

# ======================
# Kakao OAuth
# ======================
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_REDIRECT_URI=http://localhost:8080/api/v1/auth/kakao/callback

# ======================
# JWT Configuration
# ======================
JWT_SECRET=your_jwt_secret_key              # JWT 서명용 시크릿 키
JWT_ACCESS_TOKEN_EXPIRATION=1800000         # Access Token 만료(ms)
JWT_REFRESH_TOKEN_EXPIRATION=1209600000     # Refresh Token 만료(ms)

# ======================
# AI Service
# ======================
AI_SERVICE_URL=http://example-ai-host:8000  # AI 서버 주소

# ======================
# Server Configuration
# ======================
SERVER_PORT=8080                            # 백엔드 서버 포트
